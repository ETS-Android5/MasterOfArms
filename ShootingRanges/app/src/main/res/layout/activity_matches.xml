<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchesActivity"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-90dp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#B7000000"
        app:cardCornerRadius="80dp">

    <TextView
        android:id="@+id/west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105sp"
        android:layout_marginTop="50dp"
        android:text="7th West Zone"
        android:textColor="#E3F2FD"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95sp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:text="\u2022  The events will be held at \n    BSF Shooting Ranges, \n    Sanver Road, \n    Indore ,  M P "
        android:textColor="#E3F2FD"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95sp"
        android:layout_marginTop="195dp"
        android:padding="10dp"
        android:text="\u2022  Dates - \n   17th to 26th August \n   2019."
        android:textColor="#E3F2FD"
        android:textSize="20sp" />


</androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/round_button"
        android:text="View"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="pdfView"/>

    <Button
        android:id="@+id/btnMatchesOk"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="Ok"
        android:layout_marginTop="520dp"
        android:background="@drawable/all_page_button"
        android:layout_marginLeft="160dp"
        android:textColor="#E3F2FD"
        android:onClick="MatchesOk"></Button>

</RelativeLayout>