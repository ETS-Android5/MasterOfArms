<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicActivity2"
    android:background="@drawable/background">
    
    <androidx.cardview.widget.CardView
        android:layout_width="405dp"
        android:layout_height="325dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#B7000000"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="42sp"
            android:text="APPLICATION FORM"
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:text="Application Id   : "
            android:textColor="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtVwId"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="60dp"
            android:text="1"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:text="Name                 : "
            android:textColor="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ttxtVwName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="110dp"
            android:text="Hiren Mistry"
            android:textColor="#E3F2FD"
            android:textSize="20sp"/>



        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp"
            android:text="Course               : "
            android:textColor="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVwCourse"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="160dp"
            android:text="Basic"
            android:textColor="#E3F2FD"
            android:textSize="20sp"/>



        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="210dp"
            android:text="Fees                   : "
            android:textColor="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVwFees"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="210dp"
            android:text="3500/-"
            android:textColor="#E3F2FD"
            android:textSize="20sp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnPdf"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="PDF"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/round_button"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="pdf"/>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="Ok"
        android:layout_marginTop="450dp"
        android:background="@drawable/all_page_button"
        android:layout_marginLeft="160dp"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="Ok"/>

</RelativeLayout>