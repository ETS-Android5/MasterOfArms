<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:background="@drawable/background">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:padding="10dp"
        android:id="@+id/slider"/>

    <androidx.cardview.widget.CardView
        android:layout_width="405dp"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-90dp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="260dp"
        app:cardBackgroundColor="#B7000000"
        app:cardCornerRadius="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:text="Address- "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="45dp"
            android:padding="10dp"
            android:textColor="#E3F2FD"
            android:textSize="20sp"
            android:text="Prabodhankar Thackeray Krida Sankul, \nShahaji Raje Marg,\nVile Parle East,\n Mumbai, \n Maharashtra 400057"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="210dp"
            android:padding="10dp"
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:text="Call - "/>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165sp"
            android:layout_marginTop="215dp"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:text="9930947174"
            android:onClick="call"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Back"
        android:layout_marginTop="550dp"
        android:background="@drawable/all_page_button"
        android:layout_marginLeft="160dp"
        android:textColor="#E3F2FD"
        android:onClick="abtOk"></Button>

</RelativeLayout>