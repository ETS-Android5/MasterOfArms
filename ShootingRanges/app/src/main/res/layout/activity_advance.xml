<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvanceActivity"
    android:orientation="vertical"
    android:background="@drawable/background">
    
    <androidx.cardview.widget.CardView
        android:layout_width="415dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-90dp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#B7000000"
        app:cardCornerRadius="80dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="20dp"
            android:text="PREREQUISITE"
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="\u2022 Basic course cirtificate or \n   certificate from a match is \n   mandatory"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="130dp"
            android:padding="10dp"
            android:text="\u2022 Time Period - 2 hour"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="160dp"
            android:padding="10dp"
            android:text="\u2022 Fees - 2500/-"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="220dp"
            android:text="COURSE CONTENTS "
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="250dp"
            android:padding="10dp"
            android:text="\u2022 Advanced skills on Pistol/Rifle \n   such as trigger operation, \n   alignment, etc. are provided"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="335dp"
            android:padding="10dp"
            android:text="\u2022 Expert guidance by coaches \n   and sub coaches will be\n   provided"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="420dp"
            android:padding="10dp"
            android:text="\u2022 Equipments will be provided \n    on rent if available"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnApplyAdvance"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Apply"
        android:layout_marginTop="26dp"
        android:background="@drawable/all_page_button"
        android:layout_marginLeft="160dp"
        android:textColor="#E3F2FD"
        android:textSize="20sp" />

</LinearLayout>