<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-280dp"
        android:layout_marginTop="62sp"
        android:background="@drawable/menu_semi_circle" />


    <Button
        android:id="@+id/btnBasic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:drawablePadding="100dp"
        android:text="Basic Course"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="basic"/>

    <Button
        android:id="@+id/btnAdvance"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/btnBasic"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/round_button"
        android:drawablePadding="100dp"
        android:text="Advance Course"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="advance"/>

    <Button
        android:id="@+id/btnMain"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="325dp"
        android:background="@drawable/round_button"
        android:drawablePadding="100dp"
        android:text="Main Menu"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="mainMenu"/>


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/round_button"
        android:drawablePadding="100dp"
        android:text="Logout"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="logoutClick"/>


</RelativeLayout>