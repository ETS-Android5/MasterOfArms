<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicActivity"
    android:orientation="vertical"
    android:background="@drawable/background">
    
    <androidx.cardview.widget.CardView
        android:layout_width="405dp"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-90dp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#B7000000"
        app:cardCornerRadius="80dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="20dp"
            android:text="COURSE DETAILS"
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="\u2022 Eligibilty - Above 12 yrs"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="80dp"
            android:padding="10dp"
            android:text="\u2022 Duration - 12 Days"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="110dp"
            android:padding="10dp"
            android:text="\u2022 Time Period - 1 hour"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="140dp"
            android:padding="10dp"
            android:text="\u2022 Fees - 3500/-"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="200dp"
            android:text="COURSE CONTENTS "
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="230dp"
            android:padding="10dp"
            android:text="\u2022 Safety rules of shooting"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="260dp"
            android:padding="10dp"
            android:text="\u2022 Expert guidance by coaches"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="290dp"
            android:padding="10dp"
            android:text="\u2022 Basics of pistol/rifle shooting"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="320dp"
            android:padding="10dp"
            android:text="\u2022 Equipments will be provided"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="350dp"
            android:padding="10dp"
            android:text="\u2022 Eligibile for advance training \n   once basic course is \n   completed"
            android:textColor="#E3F2FD"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="Apply"
        android:layout_marginTop="30dp"
        android:background="@drawable/all_page_button"
        android:layout_marginLeft="160dp"
        android:textColor="#E3F2FD"></Button>

</LinearLayout>