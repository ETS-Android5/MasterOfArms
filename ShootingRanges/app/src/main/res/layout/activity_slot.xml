<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlotActivity"
    android:background="@drawable/background"
    android:id="@+id/slotRelative">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        app:cardBackgroundColor="#B7000000"
        app:cardCornerRadius="90dp"
        android:layout_marginLeft="-90dp"
        android:layout_marginRight="50sp">


        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="66dp"
            android:background="@android:color/transparent"
            android:text="Slot     : "
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/slotSpinner"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown"
            />

        <ImageView
            android:layout_width="120sp"
            android:layout_height="40dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/drop_down" />

        <TextView
            android:id="@+id/txtVwSlotError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="357dp"
            android:layout_marginTop="72dp"
            style="@android:style/Widget.EditText"
            android:background="@android:color/transparent"
            />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSlotSubmit"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/all_page_button"
        android:layout_marginLeft="160dp"
        android:text="OK"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="slotsubmit"/>

</RelativeLayout>