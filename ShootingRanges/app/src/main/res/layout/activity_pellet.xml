<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PelletActivity"
    android:background="@drawable/background"
    android:id="@+id/relative1">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#B7000000"
        app:cardCornerRadius="90dp"
        android:layout_marginLeft="-90dp"
        android:layout_marginRight="50sp">


        <TextView
            android:id="@+id/txtVw1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Brand      : "
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="100dp"
            android:background="@android:color/transparent"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="23dp"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown"
            />

        <ImageView
            android:layout_width="120sp"
            android:layout_height="40dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/drop_down" />

        <TextView
            android:id="@+id/txtVwError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="40dp"
            style="@android:style/Widget.EditText"
            android:background="@android:color/transparent"
            />


        <TextView
            android:id="@+id/txtVw2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Quantity : "
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="100sp"
            />

        <TextView
            android:id="@+id/txtVwQty"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="215sp"
            android:layout_marginTop="105dp"
            android:background="@android:color/black"
            android:text="  1"
            android:textColor="#E3F2FD"
            android:textSize="25sp"
            android:paddingTop="6dp"
            />

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="80dp"
            android:layout_height="35sp"
            android:layout_marginLeft="290sp"
            android:layout_marginTop="97dp"
            android:background="@drawable/increase"
            android:onClick="increaseInteger" />


        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="80dp"
            android:layout_height="35sp"
            android:layout_marginLeft="290sp"
            android:layout_marginTop="125dp"
            android:background="@drawable/decrease"
            android:onClick="decreaseInteger" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/all_page_button"
        android:layout_marginLeft="160dp"
        android:text="Submit"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="submit"/>

</RelativeLayout>