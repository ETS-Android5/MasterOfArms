<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/background">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="#B7000000"
        app:cardCornerRadius="110dp"
        android:layout_marginLeft="-90dp"
        android:layout_marginRight="50sp">

        <EditText
            android:id="@+id/edtTxtUsername_Reg"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="20sp"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="#E3F2FD"
            android:textColorHint="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTxtEmail_Reg"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="80dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="20sp"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:textColor="#E3F2FD"
            android:textColorHint="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edtTxtPassword_Reg"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="140dp"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="20sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#E3F2FD"
            android:textColorHint="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edtTxtConfirmPassword_Reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="200dp"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="20sp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#E3F2FD"
            android:textColorHint="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtVwDate_Reg"
            style="@android:style/Widget.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/datepicker"
            android:drawableLeft="@drawable/calendar"
            android:drawablePadding="20sp"
            android:onClick="dateClick"
            android:text="DOB"
            android:textColor="#E3F2FD"
            android:textColorHint="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTxtPhone_Reg"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="315dp"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="20sp"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="#E3F2FD"
            android:textColorHint="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/gender"
            android:drawablePadding="10sp"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="110sp" />

        <RadioGroup
            android:id="@+id/radGrpGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="145sp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/radBtnMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@android:color/background_light"
                android:checked="true"
                android:text="Male"
                android:textColor="#E3F2FD"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/radBtnFemale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@android:color/background_light"
                android:text="Female"
                android:textColor="#E3F2FD"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

        </RadioGroup>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnReg"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="Register"
        android:layout_marginTop="510dp"
        android:background="@drawable/all_page_button"
        android:layout_marginLeft="160dp"
        android:textColor="#E3F2FD"
        android:textSize="20sp"
        android:onClick="Register"/>

</RelativeLayout>